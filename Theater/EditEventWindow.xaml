<Window x:Class="Theater.EditEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать событие"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Название:" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Дата:" Margin="0,0,0,5"/>
            <DatePicker x:Name="DatePicker" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Время:" Margin="0,0,0,5"/>
            <TextBox x:Name="TimeTextBox" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Тип:" Margin="0,0,0,5"/>
            <ComboBox x:Name="TypeComboBox" Height="25" Margin="0,0,0,10">
                <ComboBoxItem Content="Спектакль"/>
                <ComboBoxItem Content="Спектакль на стационаре"/>
                <ComboBoxItem Content="Спектакль на выезде"/>
                <ComboBoxItem Content="Репетиция"/>
                <ComboBoxItem Content="Интермедия"/>
                <ComboBoxItem Content="Генеральная репетиция"/>
                <ComboBoxItem Content="Прогон"/>
            </ComboBox>

            <TextBlock Text="Базовые условные часы:" Margin="0,0,0,5"/>
            <TextBox x:Name="HoursTextBox" Height="25" Margin="0,0,0,0"/>
        </StackPanel>

        <GroupBox Header="Участники" Grid.Row="1" Margin="0,10,0,10">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,5">
                    <Button Content="Добавить участника" Width="150" Margin="0,0,5,0" Click="AddParticipant_Click"/>
                    <Button Content="Удалить" Width="90" Click="RemoveParticipant_Click"/>
                </StackPanel>

                <DataGrid x:Name="ParticipantsDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Актёр" Binding="{Binding Actor.Name}" IsReadOnly="True" Width="*"/>
                        <DataGridCheckBoxColumn Header="Свои часы" Binding="{Binding OverrideHours}" Width="80"/>
                        <DataGridTextColumn Header="Часы" Binding="{Binding Hours}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Отмена" Width="90" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="ОК" Width="90" Click="Ok_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
