<Window x:Class="Theater.ExportPeriodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Экспорт статистики за период"
        Width="350" Height="220"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Выберите период" FontSize="16" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="С:" VerticalAlignment="Center" Width="40"/>
                <DatePicker x:Name="StartDatePicker" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="По:" VerticalAlignment="Center" Width="40"/>
                <DatePicker x:Name="EndDatePicker" Width="200"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Экспорт" Width="100" Margin="0,0,10,0"
                    Click="Export_Click"/>
            <Button Content="Отмена" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
