<Window x:Class="Theater.ActorStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика актёра"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="ActorNameTextBlock"
               FontWeight="Bold"
               FontSize="14"
               Margin="0,0,0,5"/>

            <TextBlock x:Name="TotalsTextBlock" Margin="0,0,0,10"/>

            <!-- НОВЫЙ БЛОК -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="C:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="StartDatePicker" Width="130"/>

                <TextBlock Text="По:" Margin="10,0,5,0" VerticalAlignment="Center"/>
                <DatePicker x:Name="EndDatePicker" Width="130"/>

                <Button Content="Показать"
                Margin="10,0,0,0"
                Padding="10,3"
                Click="ApplyFilter_Click"/>
            </StackPanel>
        </StackPanel>


        <DataGrid x:Name="StatsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Тип события" Binding="{Binding EventType}" Width="*"/>
                <DataGridTextColumn Header="Участий" Binding="{Binding ParticipationCount}" Width="80"/>
                <DataGridTextColumn Header="Часы" Binding="{Binding TotalHours, StringFormat=N2}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,10,0,0">

            <Button Content="Сохранить в Word"
            Width="150"
            Margin="0,0,10,0"
            Click="SaveToWord_Click"/>

            <Button Content="Закрыть" Width="90" Click="Close_Click" IsDefault="True"/>
        </StackPanel>

    </Grid>
</Window>
