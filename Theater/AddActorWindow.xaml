<Window x:Class="Theater.AddActorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить актера" Height="300" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="15">
        <TextBlock Text="Имя:" Margin="0,0,0,5"/>
        <TextBox x:Name="NameTextBox" Height="25" Margin="0,0,0,10"/>

        <TextBlock Text="Роль:" Margin="0,0,0,5"/>
        <TextBox x:Name="RoleTextBox" Height="25" Margin="0,0,0,10"/>

        <TextBlock Text="Часы:" Margin="0,0,0,5"/>
        <TextBox x:Name="BalanceTextBox" Height="25" Margin="0,0,0,20" Text="0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Width="80" Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button Content="Сохранить" Width="80" Click="AddButton_Click" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Window>