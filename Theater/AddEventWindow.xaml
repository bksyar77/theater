<Window x:Class="Theater.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить событие" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="15">
        <TextBlock Text="Название:" Margin="0,0,0,5"/>
        <TextBox x:Name="TitleTextBox" Height="25" Margin="0,0,0,10"/>

        <TextBlock Text="Дата и время:" Margin="0,0,0,5"/>
        <DatePicker x:Name="DatePicker" Height="25" Margin="0,0,0,10" SelectedDate="{Binding Date}"/>

        <TextBlock Text="Время:" Margin="0,0,0,5"/>
        <TextBox x:Name="TimeTextBox" Height="25" Margin="0,0,0,10" Text="19:00"/>

        <TextBlock Text="Тип:" Margin="0,0,0,5"/>
        <ComboBox x:Name="TypeComboBox" Height="25" Margin="0,0,0,20">
            <ComboBoxItem Content="Спектакль" IsSelected="True"/>
            <ComboBoxItem Content="Спектакль на стационаре"/>
            <ComboBoxItem Content="Спектакль на выезде"/>
            <ComboBoxItem Content="Репетиция"/>
            <ComboBoxItem Content="Интермедия"/>
            <ComboBoxItem Content="Генеральная репетиция"/>
            <ComboBoxItem Content="Прогон"/>
        </ComboBox>

        <TextBlock Text="Условные часы:" Margin="0,0,0,5"/>
        <TextBox x:Name="HoursTextBox" Height="25" Margin="0,0,0,20" Text="0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Width="80" Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button Content="Добавить" Width="80" Click="AddButton_Click" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Window>